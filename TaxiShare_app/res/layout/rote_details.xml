<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo_detalhes" >

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/layout_details_mapa"
                android:layout_width="match_parent"
                android:layout_height="208dp" >

                <com.google.android.gms.maps.MapView
                    android:id="@+id/rote_detail_map"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                </com.google.android.gms.maps.MapView>
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/layout_details_mapa"
                android:padding="10dip" >

                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="379dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/rote_details_lbl_origem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Origem:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#f4a21e" />

                    <TextView
                        android:id="@+id/rote_details_lbl_origem_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Origem 1"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/rote_details_lbl_origem_info2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Small Text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/linhalaranja" />

                    <TextView
                        android:id="@+id/rote_details_lbl_destino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destino:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#f4a21e" />

                    <TextView
                        android:id="@+id/rote_details_lbl_destino_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Destino 1"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/rote_details_lbl_destino_info2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Small Text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/linhalaranja" />

                    <TextView
                        android:id="@+id/rote_details_lbl_adm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Administrador: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#f4a21e" />

                    <TextView
                        android:id="@+id/rote_details_lbl_adm_nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Adm"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/linhalaranja" />

                    <TextView
                        android:id="@+id/rote_details_lbl_passageiros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lugares disponiveis: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#f4a21e" />

                    <TextView
                        android:id="@+id/rote_details_lbl_passageiros_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Lugar"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/linhalaranja" />

                    <TextView
                        android:id="@+id/rote_details_lbl_hora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saida: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#f4a21e" />

                    <TextView
                        android:id="@+id/rote_details_lbl_hora_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Saida"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/rote_details_btn_participar"
                        style="@style/BtnTaxi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Participar"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

    </FrameLayout>

</ScrollView>
